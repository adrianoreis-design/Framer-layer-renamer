{
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist"
  }
}